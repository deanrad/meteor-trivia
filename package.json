{
  "name": "deanius-meteor-action-architecture",
  "private": "true",
  "version": "1.0.0",
  "description": "A reference project for an Action-Oriented Architecture for a Meteor application",
  "scripts": {
    "start": "meteor --port 7730",
    "lint": "eslint client/ imports/ server/ tests/",
    "lint:fix": "eslint --fix client/ imports/ server/ tests/",
    "test:fast": "mocha --compilers js:babel-register -R spec 'tests/**/*.js'",
    "test:meteor:unit:watch": "meteor test --driver-package practicalmeteor:mocha",
    "test:meteor:unit": "meteor test --once --driver-package dispatch:mocha-phantomjs",
    "test:load": "meteor-down tests/loadTest.js http://localhost:7730",
    "test": "npm run test:fast",
    "doc:client": "madge -j -f es6 -x 'server/|test|uni-method|meteor|immutable|redux-act|react|collections' imports/ | ruby scripts/tweak-deps.rb -x server/ | madge -r -i doc/deps-client.png",
    "doc:server": "madge -j -f es6 -x 'client/|test|uni-method|meteor|immutable|redux-act|components' imports/ | ruby scripts/tweak-deps.rb -x client/ | madge -r -i doc/deps-server.png",
    "doc:save": "madge -j -f es6 imports/ | ruby scripts/tweak-deps.rb | json_pp > doc/deps.json",
    "doc:view": "open doc/*.png",
    "doc:all": "npm run doc:save && npm run doc:client && npm run doc:server && npm run doc:view",
    "deploy": "test -f config/settings_production.json && DEPLOY_HOSTNAME=galaxy.meteor.com meteor deploy meteor-trivia.meteorapp.com --settings config/settings_production.json || echo 'config/settings_production.json not found - aborting'"
  },
  "dependencies": {
    "@deanius/thistle": "^1.0.1",
    "immutable": "^3.8.1",
    "meteor-node-stubs": "^0.2.3",
    "react": "^15.0.2",
    "react-addons-pure-render-mixin": "^15.0.2",
    "react-dom": "^15.2.1",
    "react-komposer": "^1.8.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "react-router-bootstrap": "^0.23.0",
    "redux": "^3.5.2",
    "redux-act": "^0.5.0",
    "redux-immutable": "^3.0.6",
    "rx": "^4.1.0",
    "xstream": "^5.2.1"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.11.6",
    "babel-root-slash-import": "^1.1.0",
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "css-loader": "^0.23.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.10.2",
    "eslint-plugin-meteor": "^3.6.0",
    "eslint-plugin-react": "^5.2.2",
    "expose-loader": "^0.7.1",
    "extract-text-webpack-plugin": "^1.0.0",
    "file-loader": "^0.8.5",
    "git-hooks": "^1.1.0",
    "json-loader": "^0.5.4",
    "madge": "^0.6.0",
    "mocha": "^2.5.3",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.2.0",
    "style-loader": "^0.13.0",
    "testdouble": "^1.6.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.0",
    "webpack-hot-middleware": "^2.4.1"
  }
}
